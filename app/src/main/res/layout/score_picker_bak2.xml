<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context="com.voltiosx.nolti.wavescore.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/gridwaves"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.946" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="124dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/number_picker_0"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="80sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridwaves" />

        <Button
            android:id="@+id/btn_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorAccent"
            android:text="ok"
            android:textColor="@color/primaryColor"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/number_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_score"
            app:layout_constraintVertical_bias="0.566" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:np_dividerColor="@color/secondaryTextColor"
            app:np_fadingEdgeEnabled="false"
            app:np_height="60dp"
            app:np_max="10"
            app:np_min="0"
            app:np_order="descending"
            app:np_orientation="horizontal"
            app:np_selectedTextColor="@color/primaryTextColor"
            app:np_selectedTextSize="@dimen/score_selected_text_size"
            app:np_textColor="@color/secondaryTextColor"
            app:np_textSize="@dimen/score_text_size"
            app:np_typeface="@string/roboto_regular"
            app:np_width="180dp"
            app:np_wrapSelectorWheel="true" />

        <GridView
            android:id="@+id/gridwaves"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="172dp"
            android:gravity="center_vertical|center_horizontal"
            android:horizontalSpacing="1dp"
            android:numColumns="10"
            android:stretchMode="columnWidth"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toTopOf="@+id/tv_score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridwaves"
            app:layout_constraintVertical_bias="0.709">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/tv_bestwave1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/primaryColor"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/best_wave1"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_bestwave2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:background="@color/primaryColor"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/best_wave2"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_total_score"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:background="@color/primaryColor"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/total"
                    android:textColor="@android:color/white" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/tv_best_score1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="1dp"
                    android:background="@color/primaryLightColor"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/primaryTextColor" />

                <TextView
                    android:id="@+id/tv_best_score2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/primaryLightColor"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/primaryTextColor" />

                <TextView
                    android:id="@+id/id_total_score"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/primaryLightColor"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/primaryTextColor" />
            </TableRow>

        </TableLayout>


    </android.support.constraint.ConstraintLayout>


</FrameLayout>