<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/result_table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorLycra2"
        android:stretchColumns="11">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_image_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/rider" />

                <TextView
                    android:id="@+id/tv_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:text=" rank #7"
                    android:textColor="@android:color/white"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="9"
                android:orientation="vertical"
                android:paddingStart="2dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/opaco30"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:text="Manuel Santamaria"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tv_hometown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/opaco30"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:text="Ciudad (Hometown)"
                    android:textColor="@android:color/white"
                    android:textSize="9sp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:background="@color/opaco30"
                android:gravity="center"
                android:padding="2dp"
                android:text="0.0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:background="@color/opaco30"
                android:gravity="center"
                android:padding="2dp"
                android:text="0.0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView14"
